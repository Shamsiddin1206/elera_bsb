<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.SingleCourseFragment">
    <ImageView
        android:id="@+id/course_background_picture"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/background_for_3d_design"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/course_nomi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/course_background_picture"
        android:text="3D Design Illustration"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="80dp"/>
    <ImageView
        android:id="@+id/course_star"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/star"
        app:layout_constraintTop_toTopOf="@id/course_nomi"
        app:layout_constraintStart_toEndOf="@id/course_nomi"
        app:layout_constraintBottom_toBottomOf="@id/course_nomi" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/course_nomi"
        app:layout_constraintBottom_toBottomOf="@id/course_nomi"
        app:layout_constraintStart_toEndOf="@id/course_star"
        android:text="4.8"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="10dp"
        android:id="@+id/course_reyting_text"/>
    <TextView
        android:id="@+id/course_lesson_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/course_nomi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Lessons"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="#FF335EF7"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lessons_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/course_lesson_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>