<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.IntroductionFragment">
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager_introduction"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/introduction_button"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="10dp" />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/indicator_layout"
        android:layout_width="wrap_content"
        android:animateLayoutChanges="true"
        android:animationCache="true"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/introduction_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="30dp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/introduction_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="#335EF6"
        android:text="@string/next"
        android:textStyle="bold"
        android:textSize="16sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>